@page "/"
@inherits EmployeeListBase
<h3>Selected Employee Count @SelectedEmployeeCount</h3>
<input type="checkbox" id="ShowFooterId" @bind="ShowFooter" />
<label for="ShowFooterId">Show Footer</label>
@if (Employees == null)
{
    <div class="spinner">
    </div>
}
else
{
    <div class="card-deck">
        @foreach (var employee in Employees)
        {
            <DisplayEmployee 
                Employee="employee" 
                ShowFooter="ShowFooter"
                OnEmployeeSelection="EmployeeSelectionChanged"
            >
            </DisplayEmployee>
        }
    </div>
}

